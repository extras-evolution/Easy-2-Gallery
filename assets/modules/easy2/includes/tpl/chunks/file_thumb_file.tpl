
<div class="thumb">
    <div class="boxcontent">
        <div style="position: relative; width: [+easy2:thumb.mod_w+]px; height: [+easy2:thumb.mod_h+]px;">
            <div class="icons">
                <span class="buttons">[+easy2:thumb.buttons+]</span>
            </div>
            [+easy2:thumb.thumb+]
            <div class="attributes">
				<span style="padding-right:50px;">[+easy2:thumb.icon+][+easy2:thumb.attributeIcons+]</span>
				<span class="checkbox" style="padding:0; width: [+easy2:thumb.mod_w+]px; ">
                    [+easy2:thumb.checkBox+]
                </span></div>
        </div>
        <div class="fileinfo">
            <div class="filename">[+easy2:thumb.name+]</div>
        </div>
    </div>
</div>